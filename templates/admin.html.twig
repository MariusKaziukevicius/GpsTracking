{% extends 'base.html.twig' %}

{% block add_stylesheets %}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css"
          integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ=="
          crossorigin=""/>
    <link rel="stylesheet" href="{{ asset('build/admin.css') }}">
{% endblock %}

{% block add_javascripts %}
    <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js"
            integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw=="
            crossorigin=""></script>
    <script src="{{ asset('build/admin.js') }}"></script>
{% endblock %}

{% block body %}
    <div id="controls">
        <button id="add_device">Add Device</button>
        <div id="track_device_form">
            Device ID: <input type="text"/>
            <button>Track</button>
        </div>
    </div>
    <div id="map">
        <div id="leaflet_map"></div>
    </div>
{% endblock %}